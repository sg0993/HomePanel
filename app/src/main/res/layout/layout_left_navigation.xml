<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/left_button_size"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_weight="1"
            style="@style/left_view">
            <ImageView
                android:id="@+id/home_image"
                style="@style/left_image"
                android:src="@mipmap/home" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/scenario_layout"
            android:layout_weight="1"
            style="@style/left_view">
            <ImageView
                android:id="@+id/scenario_image"
                style="@style/left_image"
                android:src="@mipmap/scenario" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/device_layout"
            android:layout_weight="1"
            style="@style/left_view">
            <ImageView
                android:id="@+id/device_image"
                style="@style/left_image"
                android:src="@mipmap/device" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/message_layout"
            android:layout_weight="1"
            style="@style/left_view">
            <ImageView
                android:id="@+id/message_image"
                style="@style/left_image"
                android:src="@mipmap/message" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dial_layout"
            android:layout_weight="1"
            style="@style/left_view">
            <ImageView
                android:id="@+id/dial_image"
                style="@style/left_image"
                android:src="@mipmap/dial" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/setting_layout"
            android:layout_weight="1"
            style="@style/left_view">
            <ImageView
                android:id="@+id/setting_image"
                style="@style/left_image"
                android:src="@mipmap/setting" />
        </RelativeLayout>
    </LinearLayout>
