<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"

    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/arm_status_noevent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goodwhat_noevent"
            style="@style/goodwhat"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="Good morning!"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/arm_hint_noevent"
            android:textColor="@android:color/white"
            android:layout_width="@dimen/left_event_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="2"
            android:textStyle="bold"
            android:text="Everything looks good,your home is ready to arm."
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/arm_status_hasevent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/goodwhat_hasevent"
            android:layout_marginTop="50dp"
            style="@style/goodwhat"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:text="Good afternoon!"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/arm_hint_hasevent"
            android:layout_width="@dimen/left_event_width"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="2"
            android:textStyle="bold"
            android:text="Everything looks good,your home is ready to arm."
            android:textSize="25sp" />

        <ListView
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/event_listview"
            android:layout_width="@dimen/left_event_width"
            android:divider="#00000000"
            android:layout_height="wrap_content"
            android:fastScrollEnabled="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/line"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id = "@+id/choose_scenarioImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/choose_scenario_home" />

            <TextView
                android:id="@+id/currentscenario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Current:Home"
                android:textSize="20sp"
                android:textColor="@android:color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to choose a scene"
                android:textSize="20sp"
                android:textColor="@color/home_text_transparent" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>