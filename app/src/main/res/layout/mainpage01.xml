<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:background="@android:color/white"
    android:layout_marginLeft="20dp">

	<LinearLayout
		android:id="@+id/arm_status_noevent"
		android:orientation="vertical"
		android:layout_gravity="center"
		android:layout_weight="3"
		android:layout_width="0dp"
		android:layout_height="wrap_content">
		<TextView
			android:text="Good morning!"
			android:layout_gravity="center_horizontal"
			android:textSize="40sp"
			style="@style/goodwhat"/>
		<TextView
			android:layout_marginTop="10dp"
			android:layout_gravity="center_horizontal"
			android:text="Everything looks good,your home is ready to arm."
			android:lines="2"
			android:ellipsize="end"
			android:textSize="20sp"
			android:layout_height="wrap_content"
			android:layout_width="300dp"/>
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_weight="2"
		android:layout_width="0dp"
		android:layout_height="match_parent">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@mipmap/line"></ImageView>

		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_gravity="center_vertical"
			android:layout_height="wrap_content">
			<ImageView
				android:src="@mipmap/choose_scenario"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView
				android:layout_marginTop="30dp"
				android:text="Tap to choose a scene"
				android:textColor="@android:color/black"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>

	</LinearLayout>
	

</LinearLayout>