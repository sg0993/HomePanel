<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/left_btn"
                android:gravity="center_vertical"
                android:background="@mipmap/call_blue_background"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <ImageView
                android:id="@+id/left_imageview"
                android:layout_gravity="center"
                android:src="@mipmap/call_lift_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <TextView
            android:id="@+id/left_tv"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Lift"
            style="@style/call_textview"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/middle_btn"
                android:gravity="center_vertical"
                android:background="@mipmap/call_blue_background"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <ImageView
                android:id="@+id/middle_imageview"
                android:layout_gravity="center"
                android:src="@mipmap/call_video_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <TextView
            android:id="@+id/middle_tv"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Video"
            style="@style/call_textview"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="60dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/right_btn"
                android:background="@mipmap/call_red_background"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <ImageView
                android:id="@+id/right_imageview"
                android:layout_gravity="center"
                android:src="@mipmap/call_end_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <TextView
            android:id="@+id/right_tv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="End"
            style="@style/call_textview"/>
    </LinearLayout>
</LinearLayout>