<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_scrolling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:context=".ui.activities.MainActivity">

    <FrameLayout
        android:id="@+id/main_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/mainpage_noselect_bkg"
            android:gravity="center"
            android:text="Scences"
            android:textAllCaps="false"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="68dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    style="@style/scenario_view"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/scenario_disarm_image"
                        style="@style/scenario_layout_imge"
                        android:src="@mipmap/secnario_disarm3x" />

                    <TextView
                        android:id="@+id/scenario_disarm_text"
                        style="@style/scenario_layout_text"
                        android:text="Disarm" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/scenario_view"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/scenario_arm_image"
                        style="@style/scenario_layout_imge"
                        android:src="@mipmap/secnario_arm3x" />

                    <TextView
                        android:id="@+id/scenario_arm_text"
                        style="@style/scenario_layout_text"
                        android:text="Arm" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/scenario_view"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/scenario_sleep_image"
                        style="@style/scenario_layout_imge"
                        android:src="@mipmap/secnario_sleep3x" />

                    <TextView
                        android:id="@+id/scenario_sleep_text"
                        style="@style/scenario_layout_text"
                        android:text="Sleep" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/scenario_view"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/scenario_party_image"
                        style="@style/scenario_layout_imge"
                        android:src="@mipmap/secnario_party3x"/>

                    <TextView
                        android:id="@+id/scenario_party_text"
                        style="@style/scenario_layout_text"
                        android:text="Party" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/home_layout"
                    style="@style/scenario_view"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/scenario_favorite_image"
                        style="@style/scenario_layout_imge"
                        android:src="@mipmap/secnario_favorite3x" />

                    <TextView
                        android:id="@+id/scenario_favorite_text"
                        style="@style/scenario_layout_text"
                        android:text="Favorite" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/scenario_layout"
                    style="@style/scenario_view"
                    android:layout_weight="1">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/device_layout"
                    style="@style/scenario_view"
                    android:layout_weight="1">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/message_layout"
                    style="@style/scenario_view"
                    android:layout_weight="1">

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>